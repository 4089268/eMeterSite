@model eMeterSite.Models.ViewModels.AuthenticationViewModel
@{
    Layout = "_LayoutGuest";
    ViewData["Title"] = "Logearse";
}
 
<div class="splash-container">

    <div class="card ">
        <div class="card-header text-center">
            <a href="../index.html"><img class="logo-img" src="/img/logo.png" alt="logo" style="width:100%;"></a>
            <span class="splash-description mt-4">Please enter your user information.</span>
        </div>
        <div class="card-body">
            @using( Html.BeginForm("Login", "Authentication", FormMethod.Post )){
                <div class="form-group">
                    <input class="form-control form-control-lg" asp-for="Email" autocomplete="off">
                </div>
                <div class="form-group">
                    <input class="form-control form-control-lg" asp-for="Password"  type="password" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>
            }
            @*
            @if(model.MessageError != null){
                <div class="alert alert-danger mt-2" role="alert">
                   @model.MessageError
                </div>
            }
            *@
        </div>
    </div>

    @if( ViewBag.ErrorMessage != null){
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }
</div>