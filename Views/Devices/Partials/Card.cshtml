@using eMeterSite.Models
@model DeviceInfo

<div class="card">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-xl-9 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="user-avatar float-xl-left pr-4 float-none">
                    <img src="/img/valve.png" alt="Valve" class="rounded-circle user-avatar-xl">
                </div>
                <div class="pl-xl-3">
                    <div class="m-b-0">
                        <div class="user-avatar-name d-inline-block">
                            <h2 class="font-24 m-b-10">DEV @Model.DeviceAddress</h2>
                        </div>
                        <div class="rating-star d-inline-block pl-xl-2 mb-2 mb-xl-0">
                            <p class="d-inline-block text-dark"> @Model.TotalRecords Registros </p>
                        </div>
                    </div>
                    <div class="user-avatar-address">   
                        <p class="mb-0">
                           <i class="fa fa-calendar-alt mr-2 text-primary"></i>
                            <span class="m-l-0">Ultimo Registro: @Model.LastUpdate.ToString("dd-MM-yyyy HH:mm:ss")</span>
                        </p>
                        <p class="mb-0">
                            <i class="fa fa-calendar-alt mr-2 text-primary"></i>
                            <span class="m-l-0">Fecha Dispositivo: @Model.DevDate @Model.DevTime </span>
                        </p>
                        <p class="mb-0">
                            <i class="fa fa-battery-half mr-2  text-primary"></i>
                            <span class="m-l-0 m-r-2">Bateria: @Model.Battery </span>

                            <i class="fa fa-bullseye mr-2  text-primary"></i>
                            <span class="m-l-0">Valvula: @Model.Valve </span>
                        </p>

                        <p class="mb-0">
                            <i class="fa fa-map-marker-alt mr-2  text-primary"></i>
                            <span class="m-l-0">Ubicacion: Ciudad, Estado </span>
                        </p>

                        <div class="mt-3">
                            <a href="#" class="mr-1 badge badge-light">Nombre projecto 1</a>
                            <a href="#" class="mr-1 badge badge-light">Nombre projecto 2</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="float-xl-right float-none mt-xl-0 mt-4">
                    <a asp-action="Show" asp-controller="Devices" asp-route-id="@Model.DeviceAddress" class="btn btn-primary">Mostrar</a>
                </div>
            </div>
        </div>
    </div>
</div>