@page
@model eMeterSite.Views.Shared.Paginator

<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        @{
            Console.WriteLine( Model.TotalItems);
            var totalPages = (int) Math.Ceiling( (double) Model.TotalItems / Model.ChunkSize);
            for(int i = 0; i <= totalPages; i++){
                var customRoute = $"{@Model.Route}?page={i}";
                <li class="page-item active">
                    <a class="page-link" href="@customRoute"> i++ </a>
                </li>
            }
        }
        
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>